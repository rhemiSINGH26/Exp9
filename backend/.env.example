# Copy this file to `.env` and replace the placeholders with real values.
# MongoDB connection string (e.g. from MongoDB Atlas)
MONGODB_URI=mongodb://localhost:27017/warehouse_db

# JSON Web Token secret (use a long, random value in production)
JWT_SECRET=replace_with_a_strong_random_secret

# JWT token expiration (e.g. 1h, 7d)
JWT_EXPIRE=1h

# Server port
PORT=5000
